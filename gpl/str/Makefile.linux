       str_detab.o str_env.o str_etoa.o str_insert.o  \
       str_match.o str_remove.o str_tolower.o str_toupper.o  \
       str_trim.o strndup.o
#
all: $(OBJS)
#
debug:
#
clean:
	rm -f *.o
	rm -f *~
