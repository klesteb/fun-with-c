CC = gcc
CFLAGS = -Wall -c -I.. -I../misc
OLBS = ../libcclibs.a
LINK = gcc
LFLAGS = -o 
LIBS = ../../libs/libgpl.a
LIBR = ar -r
#
INCS = ../str_util.h str_priv.h
#
